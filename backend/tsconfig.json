{
	"compilerOptions": {
		"target": "ES2020",
		"module": "COMMONJS",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src/**/*", "index.ts"]
}
